<%- include ../partials/header.ejs %>

<%- include ../partials/main.ejs %>

<!-- Content for the Add page -->
<div class="container">
  <div class="jumbotron">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="contactNameTextField">Contact Name</label>
                    <input type="text" class="form-control"
                    id="contactNameTextField"
                    placeholder="Enter the Contact Name"
                    name="name" required>
                </div>

                <div class="form-group">
                    <label for="contactNumberTextField">Contact Number</label>
                    <input type="text" class="form-control"
                    id="contactNumberTextField"
                    placeholder="Enter the Contact Number"
                    name="number" required>
                </div>

                <div class="form-group">
                    <label for="emailAddressTextField">Email Address</label>
                    <input type="text" class="form-control"
                    id="emailAddressTextField"
                    placeholder="Enter the Email"
                    name="email" required>
                </div>
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/contact-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>
</div>



<%- include ../partials/bottom.ejs %>  

